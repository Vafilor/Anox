    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: DjangoAPI",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/anox/manage.py",
            "args": [
                "runserver"
            ],
            "console": "integratedTerminal",
            "django": true,
            "justMyCode": false
        },
        {
            "name": "Python Debugger: Test API",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/anox/manage.py",
            "args": [
                "test"
            ],
            "console": "integratedTerminal",
            "django": true,
            "justMyCode": false
        },
        {
            "name": "Python Debugger: Import Data",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/anox/manage.py",
            "args": [
                "importdata",
                "${workspaceFolder}/data"
            ],
            "console": "integratedTerminal",
            "django": true,
            "justMyCode": false
        }
    ]
}